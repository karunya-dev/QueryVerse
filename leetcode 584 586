
-- LeetCode 584: Find Customer Referee

-- Task: Return names of customers whose referee_id is not equal to 2


SELECT name
FROM Customer
WHERE referee_id != 2 OR referee_id IS NULL;


-- LeetCode 586: Customer Placing the Largest Number of Orders

-- Task: Find the customer_number of the customer with the most orders

SELECT customer_number
FROM Orders
GROUP BY customer_number
ORDER BY COUNT(*) DESC
LIMIT 1;
