
-- Problem 619: Biggest Single Number
-- Table: MyNumbers
-- Goal: Find the largest number that appears only once


SELECT MAX(num) AS num
FROM MyNumbers
WHERE num IN (
    SELECT num
    FROM MyNumbers
    GROUP BY num
    HAVING COUNT(num) = 1
);


-- Problem 620: Not Boring Movies
-- Table: Cinema
-- Goal: Report movies with odd-numbered ID and description not 'boring'
-- Ordered by rating descending


SELECT *
FROM Cinema
WHERE id % 2 = 1
  AND description != 'boring'
ORDER BY rating DESC;
